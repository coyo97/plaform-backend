{
  "compilerOptions": {
    "target": "es6", /**/
	"module": "none",
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "*": [
        "node_modules/"
      ]
    },
    "sourceMap": true,
    "outDir": "dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
	 "typeRoots": ["./node_modules/@types", "./src/types"], // Correcto: Incluye la carpeta de tipos
  },
  "include": [
    "src/**/*"
  ]
}
